@if (showModal)
{
    <div class="modal-backdrop show"></div>
    <div class="modal fade show" style="display:block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button @onclick="Hide" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
                </div>
                <div class="modal-body">
                    <p>@Body</p>
                </div>
                <div class="modal-footer">
                    <button @onclick="Hide" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button @onclick="Confirm" type="button" class="btn btn-danger">Confirm</button>
                </div>
            </div>
        </div>
    </div>
}