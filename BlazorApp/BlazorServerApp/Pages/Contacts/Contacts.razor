@page "/contacts"

<PageTitle>Contacts</PageTitle>

<h3>Contacts</h3>

<button class="btn btn-warning" @onclick="ChangeContactsVisibility">Show/Hide Contacts</button>
<br />

<ContactsList @ref="@contactsList" Contacts="contacts">
    <NullContacts>
        <br />
        <div class="spinner-border" role="status">
            <span class="sr-only"></span>
        </div>
    </NullContacts>
    <EmptyContacts>
        <h5>No contacts to display</h5>
    </EmptyContacts>
</ContactsList>